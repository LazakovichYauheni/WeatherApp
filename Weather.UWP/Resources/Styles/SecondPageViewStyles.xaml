<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="CelsiusText" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="40"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="CelBtn" TargetType="Button">
        <Setter Property="Content" Value="°C"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="34,0,0,0"/>
    </Style>

    <Style x:Key="FahrBtn" TargetType="Button">
        <Setter Property="Content" Value="°F"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="-34,0,0,0"/>
    </Style>

    <Style x:Key="WeatherColl" TargetType="TextBlock">
        <Setter Property="Margin" Value="10,0,0,0"/>
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="Foreground" Value="White"/>
    </Style>

</ResourceDictionary>